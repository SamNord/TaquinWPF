<Window x:Class="TaquinWPF.Views.GifWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:TaquinWPF.Views"
        mc:Ignorable="d"
        Title="GifWin" Height="450" Width="800" AllowsTransparency="True" WindowStyle="None" Visibility="Visible">
    <Grid>
        <RichTextBox RenderTransformOrigin="0.562,0.525">
            <FlowDocument>
                <Paragraph>
                    <InlineUIContainer>
                        <Image x:Name="monImage" gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimatedSource="{StaticResource win}" Height="465" Width="780" />
                    </InlineUIContainer>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
